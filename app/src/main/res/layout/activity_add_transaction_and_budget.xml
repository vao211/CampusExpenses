<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btn_budget"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/budget"
        android:textColor="@color/white"
        app:icon="@drawable/budget"
        app:backgroundTint="#03A9F4"
        app:cornerRadius="4dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#FFC107"/>
    <EditText
        android:id="@+id/edt_budget_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="false"
        app:layout_constraintBottom_toTopOf="@+id/edt_budget_amount"
        app:layout_constraintTop_toBottomOf="@+id/btn_budget"
        android:hint="@string/budget_s_name"
        android:inputType=""
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="false"
        app:layout_constraintTop_toBottomOf="@+id/edt_budget_name"
        android:inputType=""
        android:hint="@string/budget_amount"
        android:id="@+id/edt_budget_amount"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_budget_description"
        android:autofillHints="false"
        android:hint="@string/budget_description"
        android:inputType=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_budget_amount"
        />
    <ImageButton
        android:id="@+id/btn_submit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/checkmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        tools:ignore="ContentDescription" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_budget_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>